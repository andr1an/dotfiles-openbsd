! ~/.Xresources

Xft.dpi: 160
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.hitstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.autohint: false

! Common font
*font: *-spleen-medium-r-*-*-32-*

! Cursor

Xcursor.size: 40
Xcursor.theme: Adwaita

! Color scheme

#define S_fg        #d3c6aa
#define S_red       #e67e80
#define S_orange    #e69875
#define S_yellow    #dbbc7f
#define S_green     #a7c080
#define S_aqua      #83c092
#define S_blue      #7fbbb3
#define S_purple    #d699b6
#define S_grey0     #7a8478
#define S_grey1     #859289
#define S_grey2     #9da9a0
#define S_bg_dim    #232a2e
#define S_bg0       #2d353b
#define S_bg1       #343f44
#define S_bg2       #3d484d
#define S_bg3       #475258
#define S_bg4       #4f585e
#define S_bg5       #56635f

*background:              S_bg0
*foreground:              S_fg
*cursorColor:             S_fg
*fadeColor:               S_bg0
*fading:                  40
*pointerColorBackground:  S_bg2
*pointerColorForeground:  S_fg

*color0:  S_bg1
*color8:  S_bg3
*color1:  S_red
*color9:  S_orange
*color2:  S_green
*color10: S_green
*color3:  S_yellow
*color11: S_yellow
*color4:  S_blue
*color12: S_blue
*color5:  S_purple
*color13: S_purple
*color6:  S_aqua
*color14: S_aqua
*color7:  S_grey2
*color15: S_fg

! URxvt settings

URxvt.tintColor: white
URxvt.shading: 5

URxvt.scrollBar_right: true

URxvt.font: xft:FantasqueSansM Nerd Font Mono:size=12

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: xdg-open
URxvt.matcher.button: 1

URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveLines: 5000
URxvt.iso14755: false
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true

! ssh-askpass settings

SshAskpass*Button.font: -*-spleen-medium-r-*-*-32-*-*-*-*-*-*-*
SshAskpass*Dialog.font: -*-spleen-medium-r-*-*-32-*-*-*-*-*-*-*
SshAskpass*Indicator.width: 40
SshAskpass*Indicator.height: 20
SshAskpass*defaultXResolution: 200/in
SshAskpass*defaultYResolution: 200/in
