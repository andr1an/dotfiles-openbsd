# ~/.cwmrc

fontname "sans-serif:pixelsize=22:bold"

command terminal urxvtc
command launcher "rofi -show drun"

bind-key 4-Return "urxvtc"
bind-key 4-d "rofi -show drun"
bind-key 4S-4 "scrot"
bind-key 4-F12 "scrot"

bind-mouse M-3 window-resize

bind-key M-F1 group-only-1
bind-key M-F2 group-only-2
bind-key M-F3 group-only-3
bind-key M-F4 group-only-4
bind-key CMS-F1 window-movetogroup-1
bind-key CMS-F2 window-movetogroup-2
bind-key CMS-F3 window-movetogroup-3
bind-key CMS-F4 window-movetogroup-4

gap 40 0 0 0

autogroup 1 "urxvtc,urxvt,URxvt"
autogroup 2 "firefox,Firefox"

sticky yes

snapdist 10
moveamount 20
