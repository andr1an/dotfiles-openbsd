# ~/.ssh/config
# vim: ts=4:sw=4:et:sta:si

Host *
    AddKeysToAgent yes
    ForwardAgent yes
    ControlMaster auto
    ControlPath ~/.ssh/.control-%r@%h:%p
    ControlPersist 15

Host github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    RequestTTY no

Match all

Include ~/.ssh/config.d/*
